{
  "name": "transaksi-app",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "kill-port": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.transaksi.app",
    "productName": "Aplikasi Transaksi",
    "directories": {
      "output": "dist_exe"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "package.json",
      "bin/**/*"
    ],
    "mac": {
      "identity": null,
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      },
      {
        "from": "bin/",
        "to": "bin/",
        "filter": ["**/*"]
      }
    ]
  }
}